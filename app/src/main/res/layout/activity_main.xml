<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.richaa2.arpdp.kotlin.helloar.HelloArActivity">

    <!-- Container where HelloArView.root will be attached from Activity -->
  <android.opengl.GLSurfaceView
      android:id="@+id/surfaceview"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      />

    <!-- Top-right settings button -->
    <ImageButton
        android:id="@+id/settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_settings"
        android:background="@android:color/transparent"
        android:contentDescription="settings"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Simple 2-mode switcher -->
    <RadioGroup
        android:id="@+id/mode_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:background="#7F000000"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/rb_mode1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mode 1"

            android:textColor="@android:color/white" />

        <RadioButton
            android:id="@+id/rb_mode2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Mode 2"
            android:textColor="@android:color/white" />
        <RadioButton
            android:id="@+id/rb_mode3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Mode 3"
            android:textColor="@android:color/white" />
    </RadioGroup>

    <Button
        android:id="@+id/clear_last_anchor"
        android:visibility="invisible"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="50dp"
        android:text="Clear Last Anchor"
        android:textSize="8sp"/>

    <Button
        android:id="@+id/clear_all_anchors"
        android:visibility="invisible"

        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:text="Clear All Anchors"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="8sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
